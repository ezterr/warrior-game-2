<h1>Stwórz wojownika</h1>

<form action="/warrior" method="post">
    <label>
        Nazwa wojownika
        <input name="name" type="text">
    </label>

    <label>
        Siła
        <input name="strength" type="number">
    </label>

    <label>
        Obrona
        <input name="defense" type="number">
    </label>

    <label>
        Wytrzymałość
        <input name="stamina" type="number">
    </label>

    <label>
        zwinność
        <input name="agility" type="number">
    </label>

    <fieldset class="avatars__container">
        <legend>Awatar</legend>
        {{#each imgName}}
            <div class="avatar__container">
                <label>
                    <img src="/img/avatars/{{this}}" alt="avatar={{@index}}">
                    <input type="radio" name="avatar" value="{{this}}" {{#unless @index}}checked{{/unless}}>
                </label>
            </div>
        {{/each}}
    </fieldset>

    <input type="submit">
</form>
